{% extends 'registration/bases.html.twig' %}


{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

<section class="container p-5">


    <h1>Réinitialiser votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <p>
                Entrez votre adresse email et nous vous envverons un lien pour pouvoir réinitialiser votre mot de passe.
            </p>
        </div>

        <button class="btn btn-primary">Reinitialiser mon mot de passe</button>
    {{ form_end(requestForm) }}
    
    </section>

{% endblock %}
