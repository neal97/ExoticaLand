{% extends 'registration/bases.html.twig' %}
  {% block stylesheets %}
             <link rel="stylesheet" href="{{ asset('css/form.css') }}">
        {% endblock %}


{% block body %}






<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

     


    <div class="signinform">
        <h1 class="text-center fw-bold">Espace Connexion</h1>


<div class="connexion">

    <h3 class=" text-center fw-bold">Connectez-vous</h3>
    <div class="trait "></div>

    
    <label class="my-2" for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    

    <label class="my-2" for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}" >

    
        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

        <div class="checkbox  my-2">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>
   

    <button class="btn btn-lg m-2" type="submit">
        Connexion
    </button>
</form>

<a class="p-2 text-center" href="{{ path('app_register') }}">Pas de compte ? Creéz en un maintenant</a>

<a class="p-2 text-center" href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
</div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

{% endblock %}
